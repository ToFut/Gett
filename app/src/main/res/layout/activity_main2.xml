<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.getremp.check.Main2Activity"
    android:weightSum="1">


    <TextView
        android:id="@+id/SourceFromFirstAcitvity"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/DestFromFirstAcitvity"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/DestFromFirstAcitvity"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        android:layout_marginEnd="113dp"
        android:layout_below="@+id/SourceFromFirstAcitvity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/DestFromFirstAcitvity"
        android:layout_below="@+id/DestFromFirstAcitvity"
        android:ems="10"
        android:inputType="time"
        android:textSize="14sp" />



</RelativeLayout>